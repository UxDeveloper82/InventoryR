@model mysite.Models.Techline
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>New Techline Contact</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-controller="Techlines" asp-action="Save" id="techform" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label>Brand Name</label>
                        <input class="form-control" asp-for="BrandName" />
                    </div>
                    <div class="form-group">
                        <label>Account Number</label>
                        <input class="form-control" asp-for="AccountNumber" />
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input class="form-control" asp-for="PhoneNumber" />
                    </div>
                    @Html.AntiForgeryToken()
                    <button type="Submit" class="btn btn-info btn-lg">Add New Contact</button>
                </form>
            </div>
        </div>
    </div>
}