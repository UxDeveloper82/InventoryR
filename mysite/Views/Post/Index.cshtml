@model IndexViewModel

@{
    ViewBag.Title = "Blog Website";
    ViewBag.Description = "This Blog Has Everything";
    ViewBag.Keywords = "Blog programing travel photography";
}

@*<h2>Home Page!</h2>
    <img src="~/content/static/repais.jpg" width="500"/>
*@

<style>
    .posts {
      
       margin-bottom:45px;
       background-color: white;
       border: 1px solid lightgray;
    }

</style>


<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="my-4 col-md-8">
            <h1 class="card-my-4 mt-5 text-uppercase">
                The Blog Best place for sharing ideas 
                <br><small>for  @DateTime.Now.Year</small>
            </h1>

            <!-- Blog Post -->
            <div class="card mb-4 posts">
                @foreach (var post in Model.Posts)
                {
                    var image_path = $"/Image/{post.Image}";
                    <img class="card-img-top img-fluid" src="@image_path">
                    <div class="card-body">
                        <h2 class="card-title">@post.Title</h2>
                     
                        <a asp-action="Detail" asp-controller="Post" asp-route-id="@post.Id" class="btn btn-primary">Read More</a>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on @post.Created by
                        <a href="#">Martin</a>
                    </div>
                }
            </div>
            <!-- Pagination -->
            @if (Model.PageNumber > 1)
            {
                <a class="btn btn-info" asp-action="Index" asp-controller="Post" asp-route-category="@Model.Category"
                   asp-route-pageNumber="@(Model.PageNumber - 1)">Previous Page</a>
            }
          
            @if (Model.NextPage)
            {

                <a class="btn btn-info" asp-action="Index" asp-controller="Post" asp-route-category="@Model.Category"
                   asp-route-pageNumber="@(Model.PageNumber + 1)">Next Page</a>
            }
            <!-- Pagination -->
        </div>
        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <form asp-controller="Post" asp-action="Index" method="get">
                            <input type="hidden" name="pageNumber" value="@Model.PageNumber" />
                            <input type="hidden" name="category" value="@Model.Category"/>
                            <input type="text" name="search" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="submit">Go!</button>
                            </span>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a asp-controller="Post" asp-action="Index" asp-route-category="New-Products">New Products</a>
                                </li>
                                <li>
                                    <a asp-controller="Post" asp-action="Index" asp-route-category="Ideas">Ideas</a>
                                </li>
                                <li>
                                    <a asp-controller="Post" asp-action="Index" asp-route-category="Tips">Tips</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a asp-controller="Post" asp-action="Index" asp-route-category="News">News</a>
                                </li>
                                <li>
                                    <a asp-controller="Post" asp-action="Index" asp-route-category="Parts">Parts</a>
                                </li>
                                <li>
                                    <a asp-controller="Post" asp-action="Index" asp-route-category="Events">Events</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Side Widget</h5>
                <div class="card-body">
                    You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>

@section Scripts{
   
}
